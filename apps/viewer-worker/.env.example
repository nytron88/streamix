# ===========================================
# Streamix Viewer Worker Environment Variables
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Redis Configuration
REDIS_URL=redis://username:password@host:port

# Worker Configuration
BATCH_SIZE=100                   # How many view counts to process at once
BATCH_INTERVAL_MS=30000         # How often to process batches (ms)
HEALTH_CHECK_PORT=3003          # Port for health check endpoint

# Logging
LOG_LEVEL=info
