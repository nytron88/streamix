# ===========================================
# Streamix Notification Worker Environment Variables
# ===========================================

# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database?sslmode=require

# Redis Configuration
REDIS_URL=redis://username:password@host:port

# Worker Configuration
BATCH_SIZE=50                    # How many notifications to process at once
PROCESSING_INTERVAL=5000         # How often to check for new notifications (ms)
MAX_RETRIES=3                    # Max retries before stopping worker

# CloudFront Configuration (for notification avatars)
CLOUDFRONT_DOMAIN=your-cloudfront-domain.cloudfront.net

# Logging
LOG_LEVEL=info
